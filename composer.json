{
    "name": "nswdpc/silverstripe-trumbowyg",
    "description": "Decorate textarea fields with the Trumbowyg editor, support content sanitising and a restricted feature set by default",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "trumbowyg",
        "editor",
        "htmleditor"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "James Ellis",
            "role": "Developer"
        }
    ],
    "autoload": {
         "psr-4": {
             "NSWDPC\\Utilities\\Trumbowyg\\": [
                 "src/Fields/",
                 "src/Models/"
             ],
             "NSWDPC\\Utilities\\Trumbowyg\\Tests\\": [
                 "tests/"
             ]
         }
    },
    "extra" : {
        "expose" : [
            "client/static"
        ]
    },
    "require": {
        "silverstripe/framework" : "^6",
        "ezyang/htmlpurifier" : "^4.17"
    },
    "require-dev": {
        "cambis/silverstripe-rector": "^2",
        "phpunit/phpunit": "^11.5",
        "cambis/silverstan": "^2",
        "nswdpc/ci-files": "dev-v-4",
        "friendsofphp/php-cs-fixer": "^3",
        "phpstan/phpstan": "^2",
        "phpstan/phpstan-phpunit": "^2",
        "rector/rector": "^2"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true,
            "silverstripe/recipe-plugin": true,
            "phpstan/extension-installer": true
        }
    }
}
