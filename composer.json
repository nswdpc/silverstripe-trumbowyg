{
    "name": "nswdpc/silverstripe-trumbowyg",
    "description": "Decorate textarea fields with the Trumbowyg editor, support content sanitising and a restricted feature set by default",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "trumbowyg",
        "editor",
        "htmleditor"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "James Ellis",
            "homepage": "https://dpc.nsw.gov.au",
            "role": "Developer"
        }
    ],
    "autoload": {
         "psr-4": {
             "NSWDPC\\Utilities\\Trumbowyg\\": [
                 "src/"
             ],
             "NSWDPC\\Utilities\\Trumbowyg\\Tests\\": [
                 "tests/"
             ]
         }
     },
    "require": {
        "silverstripe/framework" : "^4",
        "ezyang/htmlpurifier" : "^4.13"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3.0",
        "friendsofphp/php-cs-fixer": "^2.18",
        "codeception/codeception" : "^2.5 | ^3 | ^4",
        "silverstripe/sqlite3": "^2",
        "symbiote/silverstripe-phpstan": "^4"
    }
}
